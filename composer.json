{
    "name": "nwidart/laravel-videoable",
    "type": "library",
    "description": "Attach videos to your models",
    "keywords": [
        "laravel",
        "laravel-videoable",
        "video",
        "youtube",
        "vimeo"
    ],
    "homepage": "https://github.com/nwidart/laravel-videoable",
    "license": "MIT",
    "authors": [
        {
            "name": "Nicolas Widart",
            "email": "n.widart@gmail.com",
            "homepage": "https://nicolaswidart.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : ">=7.0",
        "laravel/framework": "5.5.*"
    },
    "require-dev": {
        "phpunit/phpunit" : "~6.0",
        "squizlabs/php_codesniffer": "^2.3",
        "orchestra/testbench": "3.5.*",
        "friendsofphp/php-cs-fixer": "^1.11"
    },
    "autoload": {
        "psr-4": {
            "Nwidart\\LaravelVideoable\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nwidart\\LaravelVideoable\\tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "fix-style": "vendor/bin/php-cs-fixer fix . --config-file='.php_cs' --verbose"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "laravel": {
            "providers": [
                "Nwidart\\LaravelVideoable\\LaravelVideoableServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    }
}
